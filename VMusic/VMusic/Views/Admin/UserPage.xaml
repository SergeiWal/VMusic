<Page x:Class="VMusic.Views.Admin.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VMusic.Views.Admin"
       xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserPage">
 
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border CornerRadius="20" Grid.RowSpan="3"
                Grid.ColumnSpan="5"
                Background="#FF131317">
        </Border>

        <WrapPanel Grid.ColumnSpan="4"
                   HorizontalAlignment="Center">
            <Button Style="{StaticResource AppControlButton}"
                    HorizontalAlignment="Left"
                    Width="230"
            >
                <Button.Content>
                    <TextBlock
                        Foreground="#FFBDBDBD"
                        Opacity="0.3"
                        Text="Заблокривать/разблокировать">
                    </TextBlock>
                </Button.Content>
            </Button>

            <Button Style="{StaticResource AppControlButton}"
                    HorizontalAlignment="Right"
                    Width="225"
            >
                <Button.Content>
                    <TextBlock
                        Foreground="#FFBDBDBD"
                        Opacity="0.3"
                        Text="Удалить">
                    </TextBlock>
                </Button.Content>
            </Button>

            <Button Style="{StaticResource AppControlButton}"
                    HorizontalAlignment="Right"
                    Width="225"
            >
                <Button.Content>
                    <TextBlock
                        Foreground="#FFBDBDBD"
                        Opacity="0.3"
                        Text="Сделать админом">
                    </TextBlock>
                </Button.Content>
            </Button>
        </WrapPanel>



        <TextBlock Grid.Row="1" Grid.Column="0"
            HorizontalAlignment="Center" 
            VerticalAlignment="Center"
            FontSize="24"
            Text="#" Foreground="DeepPink"
            ></TextBlock>

        <TextBlock Grid.Row="1" Grid.Column="1"
            HorizontalAlignment="Center" 
            VerticalAlignment="Center"
            FontSize="24"
            Text="имя" 
            Foreground="DeepPink"
            ></TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="2"
            HorizontalAlignment="center" 
            VerticalAlignment="Center"
            FontSize="24"
            Text="cостояние" 
            Foreground="DeepPink"
            ></TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="3"
            HorizontalAlignment="center" 
            VerticalAlignment="Center"
            FontSize="24"
            Text="роль" 
            Foreground="DeepPink"
            ></TextBlock>


        <Border Grid.ColumnSpan="5" Grid.Row="0"
                Background="#FFBDBDBD" Height="2"
                VerticalAlignment="Bottom"
                Opacity="0.2"
                Panel.ZIndex="1"/>
        <Border Grid.ColumnSpan="5" Grid.Row="1"
                Background="DeepPink" Height="2"
                VerticalAlignment="Bottom"
                Panel.ZIndex="2"/>
        <Border Grid.Row="1" Grid.RowSpan="3"
                Grid.Column="0"
                Background="#FFBDBDBD" Width="2"
                HorizontalAlignment="Right"
                Opacity="0.2"
                Panel.ZIndex="1"/>
        <Border Grid.Row="1" Grid.RowSpan="3"
                Grid.Column="1"
                Background="#FFBDBDBD" Width="2"
                HorizontalAlignment="Right"
                Opacity="0.2"
                Panel.ZIndex="1"
                />
        <Border Grid.Row="1" Grid.RowSpan="3"
                Grid.Column="2"
                Background="#FFBDBDBD" Width="2"
                HorizontalAlignment="Right"
                Opacity="0.2"
                Panel.ZIndex="1"
                />
        

        <ScrollViewer  Grid.Row="2" Grid.Column="0"
                       Grid.ColumnSpan="5"
                       Background="Transparent"
                       Margin="0 5 5 10"
                       VerticalScrollBarVisibility="Auto"
                       HorizontalScrollBarVisibility="Disabled">
            <ListView Background="Transparent" 
                      BorderThickness="0"
                      ItemsSource="{Binding Songs}">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment"  Value="Stretch"></Setter>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border  BorderThickness="0"
                                 Height="60"
                                 Background="Transparent"
                                 BorderBrush="Transparent">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Name="Id" 
                                           Text="1" FontSize="18"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                                </TextBlock>
                                <TextBlock  Name="Name" Grid.Column="1"
                                Text="Name" FontSize="18"
                                Margin="10 0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left">
                                </TextBlock>
                                <TextBlock  Name="State" Grid.Column="2"
                                Text="Blocked" FontSize="18"
                                Margin="10 0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                                </TextBlock>

                                <TextBlock Grid.Row="0" Grid.Column="3" 
                                           Name="Role"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Text="Admin"
                                           FontSize="18" Margin="10 0">
                                </TextBlock>

                                <Border Grid.ColumnSpan="5" 
                            Background="#FFBDBDBD" Height="2"
                            VerticalAlignment="Bottom"
                            Opacity="0.2"
                            Panel.ZIndex="1"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>
       
    </Grid>
</Page>
