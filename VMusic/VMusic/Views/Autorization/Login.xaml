<Page x:Class="VMusic.Views.Autorization.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VMusic.Views.Autorization"
      mc:Ignorable="d" 
      Height="534" Width="414"
      Title="Login">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Border CornerRadius="20" Grid.RowSpan="2"
                Style="{StaticResource Background}">
        </Border>

        <Button x:Name="Exit"
                HorizontalAlignment="Right"
                Style="{StaticResource ExitButton}"
                Margin="15 5">
        </Button>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0 80" >
            <TextBlock>VMUSIC</TextBlock>
            <TextBox></TextBox>
            <PasswordBox></PasswordBox>
            <Button></Button>
            <TextBlock>VMUSIC</TextBlock>
            <TextBlock>VMUSIC</TextBlock>
        </StackPanel>
    </Grid>
</Page>
